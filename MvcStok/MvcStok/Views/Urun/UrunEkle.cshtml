@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Ad</label>
        <input type="text" class="form-control" name="URUNAD" required="" maxlength="30"/>
    </div>
    <div style="margin-top: 20px;">
        <label>Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" maxlength="20"/>
    </div>
    <div style="margin-top: 20px;">
        <label>Kategori Seç</label>
        @Html.DropDownListFor(m=> m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    </div>
    <div style="margin-top: 20px;">
        <label>Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" required=""/ maxlength="5">
    </div>
    <div style="margin-top: 20px;">
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" required="" maxlength="2"/>
    </div>
    <div style="margin-top: 20px;">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
