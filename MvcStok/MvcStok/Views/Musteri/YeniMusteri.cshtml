@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MUSTERİAD, new { @class = "form-control" })
        <br />
        @Html.ValidationMessageFor(m => m.MUSTERİAD, "", new { @style = "color:red" })
    </div>
    <div style="margin-top: 20px;">
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>
    <div style="margin-top: 20px;">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>

    <script>
        $('#btn1').click(function () {
            alert('Müşteri Ekleme İşlemi Yapıldı...!');
        });
    </script>
</form>

